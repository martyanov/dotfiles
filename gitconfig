[alias]
        amend = commit --amend --reuse-message=HEAD
        branches = branch -a
        d = diff
        dc = diff --cached
        l = log --pretty=format:'%C(red)%h%C(reset) %C(yellow)%an: %C(reset)%s %C(green)(%cr)' --graph --date=relative
        ln = log --pretty=format:'%C(red)%h%C(reset) %C(yellow)%an: %C(reset)%s %C(green)(%cr)' --graph --date=relative -n 10
        remotes = remote -v
        st = status -s
        tags = tag -l
        uncommit = reset --soft HEAD^
        unstage = reset HEAD

[core]
        editor = emacs
        excludesfile = ~/.gitignore_global

[color]
        branch = auto
        diff = auto
        interactive = auto
        status = auto
        ui = auto

[credential]
        helper = cache --timeout=3600

[fetch]
        prune = true

[gc]
        auto = 1

[merge]
        summary = true

[pull]
        default = simple
        rebase = true

[push]
        default = simple

[user]
        name = Andrey Martyanov
        email = andrey@martyanov.com
